{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".env"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "if exist dist rmdir /s /q dist || rm -rf dist",
      "npm run build"
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}