{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"] // Add only node types
  },
  "include": [
    "vite.config.ts",
    "postcss.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}