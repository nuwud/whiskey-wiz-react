rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Quarter rules
    match /quarters/{quarterId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
    
    // User rules
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || request.auth.token.admin == true;
    }
    
    // Scores rules
    match /scores/{scoreId} {
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.playerId || request.auth.token.admin == true;
    }
    
    // Game configuration rules
    match /game_configurations/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
  }
}
