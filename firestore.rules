rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Match timeseries data
    match /timeseries/{docId} {
      allow read, write: if isAdmin();
    }

    // Allow admin to read all collections
    match /playerProfiles/{profileId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /playerStats/{docId} {
      allow read, write: if isAdmin();
    }
    
    match /sampleAnalytics/{docId} {
      allow read, write: if isAdmin();
    }

    match /quarterAnalytics/{docId} {
      allow read, write: if isAdmin();
    }

    match /sample_attempts/{docId} {
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /quarters/{quarterId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}